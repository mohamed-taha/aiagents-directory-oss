# Django
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0

# Database (SQLite is used by default, set this for PostgreSQL)
# DATABASE_URL=postgres://user:password@localhost:5432/database_name

# Email
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Google OAuth (optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Services (required for auto-discovery pipeline)
OPENAI_API_KEY=your-openai-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key
ZYTE_API_KEY=your-zyte-api-key

# Search Engine Indexing (optional)
GOOGLE_INDEXING_CREDENTIALS=/path/to/service-account.json
BING_WEBMASTER_API_KEY=your-bing-api-key

# Site Configuration
SITE_ADMIN_EMAIL=admin@example.com
REFERRAL_SOURCE=YourSite.com
WAGTAILADMIN_BASE_URL=https://yourdomain.com
